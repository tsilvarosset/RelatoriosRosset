@model IEnumerable<RelatoriosRosset.Models.GeraCargaPropriasModel>
@{
    ViewData["Title"] = "Gera Carga Lojas Próprias";
}

<h2>Gera Carga Lojas Próprias</h2>

@if (TempData["Mensagem"] != null)
{
    <div class="alert alert-info">
        @TempData["Mensagem"]
    </div>
}

<form asp-action="ExecutarProcedure" method="post" class="mb-4">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="filial">Selecione a Filial</label>
                <select id="filial" name="filial" class="form-control" style="width: 100%;">
                    <option value="">Selecione uma Filial</option>
                    @foreach (var filial in ViewBag.V_FILIAIS_ATIVAS_PROPRIAS)
                    {
                        <option value="@filial.Value">@filial.Text</option>
                    }
                </select>
            </div>
            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Gerar Carga</button>
                <a asp-action="ExportarExcel" class="btn btn-success">Gerar Relatório em Excel</a>
            </div>
        </div>
    </div>
</form>

@if (Model != null && Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>CODIGO BARRA</th>
                <th>DESC PRODUTO</th>
                <th>FILIAL</th>
                <th>PRODUTO</th>
                <th>COR PRODUTO</th>
                <th>DESC COR PRODUTO</th>
                <th>GRADE</th>
                <th>ESTOQUE</th>
                <th>CUSTO REPOSICAO</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CODIGO_BARRA</td>
                    <td>@item.DESC_PRODUTO</td>
                    <td>@item.FILIAL</td>
                    <td>@item.PRODUTO</td>
                    <td>@item.COR_PRODUTO</td>
                    <td>@item.DESC_COR_PRODUTO</td>
                    <td>@item.GRADE</td>
                    <td>@item.ESTOQUE</td>
                    <td>@item.CUSTO_REPOSICAO1</td>
                </tr>
            }
        </tbody>
    </table>
}
