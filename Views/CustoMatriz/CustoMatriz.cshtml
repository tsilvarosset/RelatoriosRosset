@model RelatoriosRosset.Models.CustoViewMatrizModel
@{
    ViewData["Title"] = "Gerar Custo Matriz";
    var dataInicial = Model.DataInicial == DateTime.MinValue ? DateTime.Today.AddDays(-7).ToString("yyyy-MM-dd") : Model.DataInicial.ToString("yyyy-MM-dd");
    var dataFinal = Model.DataFinal == DateTime.MinValue ? DateTime.Today.ToString("yyyy-MM-dd") : Model.DataFinal.ToString("yyyy-MM-dd");
}

<h2>@ViewData["Title"]</h2>

@if (!string.IsNullOrEmpty(Model.Mensagem))
{
    <div class="alert @(Model.Mensagem.Contains("Erro") ? "alert-danger" : "alert-success")" role="alert">
        @Model.Mensagem
    </div>
}

@if (TempData["Erro"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["Erro"]
    </div>
}

<form asp-controller="CustoMatriz" asp-action="ExecutarProcedure" method="post">
    <div class="form-group mb-3">
        <label for="dataInicial" class="form-label">Data Inicial:</label>
        <input type="date" class="form-control" id="dataInicial" name="dataInicial" value="@dataInicial" required />
    </div>
    <div class="form-group mb-3">
        <label for="dataFinal" class="form-label">Data Final:</label>
        <input type="date" class="form-control" id="dataFinal" name="dataFinal" value="@dataFinal" required />
    </div>
    
    <button type="submit" class="btn btn-primary">Gerar Saldo</button>
    <a asp-action="GerarRelatorio" class="btn btn-success">Gerar Relatório</a>
</form>

@section Scripts {
    <script>
        // Validação client-side para datas
        document.querySelector('form[method="post"]').addEventListener('submit', function (e) {
            const dataInicial = new Date(document.getElementById('dataInicial').value);
            const dataFinal = new Date(document.getElementById('dataFinal').value);
            if (dataFinal < dataInicial) {
                e.preventDefault();
                alert('A data final não pode ser anterior à data inicial.');
            }
        });
    </script>
}