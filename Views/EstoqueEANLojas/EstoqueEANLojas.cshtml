@model RelatoriosRosset.Models.EstoqueEANLojasModel
@{
    ViewData["Title"] = "Estoque por Loja (EAN)";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["Mensagem"] != null)
{
    <div class="alert alert-success">@TempData["Mensagem"]</div>
}

@if (TempData["Erro"] != null)
{
    <div class="alert alert-danger">@TempData["Erro"]</div>
}

<form asp-action="ExecutarProcedure" method="post">
    <div class="form-group mb-3">
        <label for="dataInicial">Data Saldo:</label>
        <input type="date" id="dataSaldo" name="dataSaldo" class="form-control" required />
    </div>

    <div class="form-group mb-3">
        <label>Filial Origem:</label>
        @Html.DropDownList("filial", (List<SelectListItem>)ViewBag.V_FILIAIS_ATIVAS_PROPRIAS, "Selecione a Filial", new { @class = "form-control", required = "required" })
    </div>

    <button type="submit" class="btn btn-primary">Gerar Estoque</button>
    <a asp-action="ExportarExcel" class="btn btn-success">Exportar Excel</a>
</form>
